<?xml version="1.0" encoding="UTF-8"?>
<lint>

    <issue id="HardcodedText" severity="error" />

    <issue id="LogConditional" severity="warning" />

    <issue id="GoogleAppIndexingWarning" severity="ignore" />

    <issue id="LockedOrientationActivity" severity="ignore" />

    <issue id="InlinedApi" severity="ignore" />

    <issue id="RtlSymmetry" severity="ignore" />

    <issue id="RtlHardcoded" severity="ignore" />

    <issue id="IconDensities">
        <ignore path="src/**/res/drawable-xxxhdpi" />
    </issue>

    <issue id="IconMissingDensityFolder">
        <ignore regexp=".*drawable-mdpi.*" />
    </issue>

    <!-- Excluding known cases when lint is false positive -->
    <issue id="InvalidPackage">
        <ignore regexp=".*okio.*" />
        <ignore regexp=".*retrofit.*" />
    </issue>

    <issue id="UnusedResources">
        <ignore regexp="google_crash_reporting_api_key" />
    </issue>

</lint>
