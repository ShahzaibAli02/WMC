<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                        
                                                         
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/item_new_subscription_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tool="http://schemas.android.com/tools">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subscriptionCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#0090C5"
            app:strokeWidth="1dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sub_back_2"
                    android:layout_gravity="bottom"
                    android:scaleType="fitEnd"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:elevation="@dimen/dp_2"
                            android:maxHeight="60dp"
                            android:src="@drawable/logo"
                            app:layout_constraintBottom_toTopOf="@id/txtPlantype"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtPlantype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/kd_extra_bold"
                            android:includeFontPadding="false"
                            android:tag="binding_1"     
                            android:textColor="@color/white"
                            android:textSize="40dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView"
                            tool:text="Premium" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:elevation="-1dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sub_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:fontFamily="@font/kd_extra_bold"
                            android:gravity="center"
                            android:textColor="#0090C5"
                            android:textSize="20dp"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5"
                            tool:text="â‚¬11.88 \n yearly" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_benefit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_15"
                        tool:listitem="@layout/item_subscription_benefit"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />


                    <TextView
                        android:id="@+id/txtRedeemCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Redeem Code"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue300"
                        android:textSize="18dp"
                        android:fontFamily="@font/kd_extra_bold"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPurchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase now"
                        android:fontFamily="@font/kd_extra_bold"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center"

                        android:layout_marginBottom="35dp"
                        android:background="@drawable/purchase_back_button"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
         