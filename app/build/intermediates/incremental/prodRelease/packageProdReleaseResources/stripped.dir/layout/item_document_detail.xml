<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

                                           

                 
                        
                                                  
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_document_detail_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_document"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/documentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:tag="binding_1"      
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintEnd_toStartOf="@+id/moreButton"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            tools:text="My Travel policy" />

        <ImageView
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:paddingHorizontal="16dp"
            android:src="@drawable/ic_three_dots"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/documentName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/documentName" />

        <TextView
            android:id="@+id/description"
            style="@style/App.DescriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:tag="binding_2"            
                                                                                          
            app:layout_constraintEnd_toEndOf="@id/documentName"
            app:layout_constraintStart_toStartOf="@id/documentName"
            app:layout_constraintTop_toBottomOf="@id/documentName"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

    </androidx.constraintlayout.widget.ConstraintLayout>
         