<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                        
                                                      
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp" android:tag="layout/item_subscription_overview_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subscriptionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/dividerLine"
            app:strokeWidth="0.5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/subscriptionManagerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    tools:text="Subscription Manager: John very long name" />

                <TextView
                    android:id="@+id/membershipOccupancyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    tools:text="Membership Occupancy: 1/1" />

                <TextView
                    android:id="@+id/expiredTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    tools:text="Expired 12/2022" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/removeMembershipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_remove_membership"
                    android:paddingHorizontal="10dp"
                    android:text="@string/subscription_remove_membership_button_title"
                    android:textColor="@color/titleColor"
                    android:visibility="gone"
                    app:strokeColor="@color/cardButtonStrokeColor"
                    app:strokeWidth="1dp"
                    tools:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/triangleBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_subscription_triangle_bar"
            app:layout_constraintBottom_toTopOf="@id/rectangleBar"
            app:layout_constraintEnd_toStartOf="@+id/subscriptionCard"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/rectangleBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_subscription_rectangle_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/opensans_semibold"
            android:tag="binding_1"     
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/rectangleBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rectangleBar"
            tools:text="Personal Safety" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         