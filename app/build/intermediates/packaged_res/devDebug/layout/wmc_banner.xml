<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wmcCard"
        style="@style/App.WmcCard"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:tag="layout/wmc_banner_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/wmcMenuButton"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_three_dots"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/wmcLogo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/wmc_logo"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintDimensionRatio="2.2:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcMenuButton"
                    app:layout_goneMarginTop="48dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcLogo" />

                <TextView
                    android:id="@+id/orderSuccessful"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/order_successful_bg"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="6dp"
                    android:text="@string/wmc_order_successful"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcLogo"
                    tools:visibility="visible" />

                <TextView

                    android:id="@+id/reorderDurationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/gray600"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcLogo"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="Card can be reordered in 327 days"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wmcOrderLayout"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/wmcOrderTitle"
                    style="@style/App.CardTitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_your_card_title"
                    android:textColor="@color/titleColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wmcOrderDescription"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.28"
                    android:text="@string/order_your_card_description"
                    android:textColor="@color/expandCardDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcOrderTitle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orderLaterButton"
                    style="@style/App.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/maybe_later_button"
                    app:layout_constraintBottom_toBottomOf="@id/orderNowButton"
                    app:layout_constraintEnd_toStartOf="@id/orderNowButton"
                    app:layout_constraintTop_toTopOf="@id/orderNowButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orderNowButton"
                    style="@style/App.WmcCardButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/order_now_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcOrderDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

         