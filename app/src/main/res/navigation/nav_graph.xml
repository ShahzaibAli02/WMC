<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <action
        android:id="@+id/action_global_logout"
        app:destination="@+id/splash"
        app:launchSingleTop="true"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/splash"
        android:name="no.wmc.ui.splash.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_screen">

        <action
            android:id="@+id/splash_to_intro"
            app:destination="@id/intro"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/splash_to_landing"
            app:destination="@id/landing"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

        <!--<action
            android:id="@+id/splash_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />-->

        <action
            android:id="@+id/splash_to_home"
            app:destination="@id/dashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/intro"
        android:name="no.wmc.ui.intro.IntroFragment"
        android:label="intro_fragment"
        tools:layout="@layout/intro_screen">

        <action
            android:id="@+id/intro_to_landing"
            app:destination="@id/landing"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/intro"
            app:popUpToInclusive="true" />

        <!-- Todo intro to login navigation -->
        <action
            android:id="@+id/intro_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/landing"
        android:name="no.wmc.ui.landing.LandingFragment"
        android:label="landing_fragment"
        tools:layout="@layout/landing_screen">

        <action
            android:id="@+id/landing_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/landing_to_terms"
            app:destination="@id/terms"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <!--<action
            android:id="@+id/landing_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />-->

        <action
            android:id="@+id/landing_to_home"
            app:destination="@id/dashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/terms"
        android:name="no.wmc.ui.terms.TermsFragment"
        android:label="terms_fragment"
        tools:layout="@layout/terms_screen">

        <argument
            android:name="showButton"
            android:defaultValue="true"
            app:argType="boolean" />

        <!--<action
            android:id="@+id/terms_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />-->

        <action
            android:id="@+id/terms_to_home"
            app:destination="@id/dashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="no.wmc.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_screen">

        <!--<action
            android:id="@+id/login_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />-->

        <action
            android:id="@+id/login_to_home"
            app:destination="@id/dashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/login_to_terms"
            app:destination="@id/terms"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/login_to_reset_password"
            app:destination="@id/resetPassword"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="name"
                android:defaultValue=""
                app:argType="string" />
            <argument
                android:name="email"
                android:defaultValue=""
                app:argType="string" />
        </action>



        <action
            android:id="@+id/login_to_subscription"
            app:destination="@id/newSubscription"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="email"
                android:defaultValue=""
                app:argType="string" />
            <argument
                android:name="password"
                android:defaultValue=""
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_login_to_OTPFragment"
            app:destination="@id/OTPFragment" />
        <action
            android:id="@+id/action_login_to_dash"
            app:destination="@id/dashFragment" />

    </fragment>

    <fragment
        android:id="@+id/resetPassword"
        android:name="no.wmc.ui.login.resetpassword.ResetPasswordFragment"
        android:label="reset_password_fragment"
        tools:layout="@layout/reset_password_screen" />

    <fragment
        android:id="@+id/register"
        android:name="no.wmc.ui.registration.RegisterFragment"
        android:label="register_user"
        tools:layout="@layout/fragment_register">

        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string" />

        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string" />

        <action
            android:id="@+id/register_to_subscription"
            app:destination="@id/newSubscription"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="email"
                android:defaultValue=""
                app:argType="string" />
            <argument
                android:name="password"
                android:defaultValue=""
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/newSubscription"
        android:name="no.wmc.ui.subscription.newflow.NewSubscriptionFragment"
        android:label="new_subscription"
        tools:layout="@layout/fragment_new_subscription">
        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="password"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/subscribe_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <!--<action
            android:id="@+id/subscribe_to_home"
            app:destination="@id/home"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />-->

        <action
            android:id="@+id/subscribe_to_home"
            app:destination="@id/dashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>



    <fragment
        android:id="@+id/profile"
        android:name="no.wmc.ui.profile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_screen">

    </fragment>

    <dialog
        android:id="@+id/mainBottomDialog"
        android:name="no.wmc.ui.main.home.MainBottomDialog"
        android:label="main_bottom_dialog"
        tools:layout="@layout/main_bottom_dialog">

        <action
            android:id="@+id/home_to_terms"
            app:destination="@id/terms"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/home_to_subscription_overview"
            app:destination="@id/subscriptionOverview"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </dialog>

    <dialog
        android:id="@+id/wmcBottomDialog"
        android:name="no.wmc.ui.main.home.WmcBannerBottomDialog"
        android:label="wmc_bottom_dialog"
        tools:layout="@layout/wmc_banner_bottom_dialog">

    </dialog>

    <fragment
        android:id="@+id/addMedicalInfo"
        android:name="no.wmc.ui.medical.AddMedicalInfoFragment"
        android:label="add_medical_info_fragment"
        tools:layout="@layout/fragment_add_medical_info">

        <argument
            android:name="profileItemEnum"
            app:argType="no.wmc.domain.enums.ProfileItemEnum" />

    </fragment>

    <dialog
        android:id="@+id/editCardBottomDialog"
        android:name="no.wmc.ui.main.home.EditCardBottomDialog"
        android:label="edit_card_bottom_dialog"
        tools:layout="@layout/edit_card_bottom_dialog">

        <argument
            android:name="profileItemEnum"
            app:argType="no.wmc.domain.enums.ProfileItemEnum" />

    </dialog>

    <fragment
        android:id="@+id/documentMetadata"
        android:name="no.wmc.ui.document.DocumentMetadataFragment"
        android:label="document_metadata_fragment"
        tools:layout="@layout/fragment_document_metadata">

        <argument
            android:name="fileUri"
            app:argType="android.net.Uri"
            app:nullable="true" />

        <argument
            android:name="document"
            app:argType="no.wmc.domain.model.Document"
            app:nullable="true" />

    </fragment>

    <dialog
        android:id="@+id/translateDialog"
        android:name="no.wmc.ui.translate.TranslateBottomSheetDialogFragment"
        android:label="translate_bottom_dialog"
        tools:layout="@layout/dialog_translate">

        <argument
            android:name="itemType"
            app:argType="no.wmc.domain.enums.ProfileItemEnum" />

        <argument
            android:name="title"
            app:argType="string" />

    </dialog>

    <fragment
        android:id="@+id/subscriptionOverview"
        android:name="no.wmc.ui.subscription.overview.SubscriptionOverviewFragment"
        android:label="subscription_overview"
        tools:layout="@layout/subscription_overview_screen">

        <action
            android:id="@+id/subscription_overview_to_subscription_detail"
            app:destination="@id/subscriptionDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/subscriptionDetail"
        android:name="no.wmc.ui.subscription.details.SubscriptionDetailFragment"
        android:label="subscription_detail"
        tools:layout="@layout/subscription_detail_screen">

        <argument
            android:name="id"
            app:argType="integer" />

        <action
            android:id="@+id/subscription_detail_to_subscription_invitation"
            app:destination="@+id/subscriptionInvitation"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/subscriptionInvitation"
        android:name="no.wmc.ui.subscription.invitation.SubscriptionInvitationFragment"
        android:label="subscription_invitation"
        tools:layout="@layout/subscription_invitation_screen">

        <argument
            android:name="subscriptionId"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="no.wmc.ui.otp.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <action
            android:id="@+id/action_OTPFragment_to_landing"
            app:destination="@id/landing" />
        <action
            android:id="@+id/action_OTPFragment_to_terms"
            app:destination="@id/terms" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="no.wmc.ui.main.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_screen">

        <action
            android:id="@+id/showMainBottomDialog"
            app:destination="@id/mainBottomDialog" />

        <action
            android:id="@+id/showWmcBottomDialog"
            app:destination="@id/wmcBottomDialog" />

        <action
            android:id="@+id/editProfile"
            app:destination="@id/profile"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/home_to_add_medical_info"
            app:destination="@+id/addMedicalInfo"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/showEditCardBottomDialog"
            app:destination="@id/editCardBottomDialog" />

        <action
            android:id="@+id/home_to_document_metadata"
            app:destination="@+id/documentMetadata"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/home_to_translate_bottom_dialog"
            app:destination="@+id/translateDialog" />

    </fragment>
    <fragment
        android:id="@+id/dashFragment"
        android:name="no.wmc.ui.main.dashboard.DashFragment"
        android:label="DashFragment" >

        <action
            android:id="@+id/dash_to_login_fragment"
            app:destination="@+id/login"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/emergencyFragment2"
        android:name="no.wmc.ui.main.EmergencyFragment"
        android:label="EmergencyFragment" />


</navigation>
