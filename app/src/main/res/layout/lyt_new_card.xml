<?xml version="1.0" encoding="utf-8"?>
<layout>


<LinearLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:background="@drawable/new_card_back"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="MEDICAL INFORMATION INSIDE"
            android:textColor="@color/white"
            style="@style/new_card_text_style"
            android:shadowColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Medical Card"
            android:textAllCaps="true"
            android:rotation="90"
            style="@style/new_card_text_style"
            android:layout_marginStart="-30dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|start"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Emergency Medical Card"
            android:textAllCaps="true"
            android:rotation="180"
            android:textSize="12dp"
            style="@style/new_card_text_style"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|bottom"
            />

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@drawable/dotted_line"
            android:layout_gravity="end"
            android:elevation="10dp"
            android:layout_marginEnd="32dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Break Seal to open"
            android:textAllCaps="true"
            style="@style/new_card_text_style"
            android:rotation="90"
            android:layout_marginEnd="-45dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#BDD7F1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issued on"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtIssuedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wmc-card.biz"
                        android:textSize="9dp"
                        android:fontFamily="@font/roboto_light"
                        />



                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/wmc_logo" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="11dp"
                android:fontFamily="@font/roboto_bold"
                />


            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="YOUR NAME HERE "
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="Shahzaib Ali" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Insurance Company"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="11dp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/txtTravelInsuranceCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="12dp"
                tools:text="Company name"
                android:minHeight="20dp"
                android:background="@color/white"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Policy No:"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtPolicyNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:textSize="12dp"
                        tools:text="Company name"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency Phone No:"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtEmergencyPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:textSize="12dp"
                        tools:text="Company name"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="National ID number or similar:"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtNationalId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:textSize="12dp"
                        tools:text="National ID Num"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nationality"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtNationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        tools:text="Pakistani"
                        android:textSize="12dp"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth:"
                        android:includeFontPadding="false"
                        android:textStyle="bold"

                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        tools:text="12/02/2000"
                        android:textSize="12dp"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organ Donation"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        />
                    <TextView
                        android:id="@+id/txtOrganDonation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        tools:text="No"
                        android:textSize="12dp"
                        android:minHeight="20dp"
                        android:background="@color/white"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</LinearLayout>
</layout>