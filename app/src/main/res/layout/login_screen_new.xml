<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_login"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="@string/welcome"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@id/endGuideline"
                app:layout_constraintStart_toStartOf="@id/startGuideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:text="@string/please_sign_in_to_continue"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/endGuideline"
                app:layout_constraintStart_toStartOf="@id/startGuideline"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_off_white_radius"
                android:hint="@string/register_email_field_hint"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColorHint="@color/grey"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userEmailField"
                    style="@style/App.InputField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_off_white_radius"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_off_white_radius"
                android:hint="@string/register_password_field_hint"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColorHint="@color/grey"
                app:boxStrokeWidth="0dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userPasswordField"
                    style="@style/App.InputField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_off_white_radius"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetPasswordButton"
                style="@style/App.TextNoBackgroundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:gravity="end"
                android:text="@string/register_login_forget_password_title"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/rememberMeCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:text="@string/remember_me"
                android:textColor="@color/white"
                android:visibility="gone"
                app:buttonTint="@color/new_checkbox_filter_tint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_off_white_only_top_radius"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginButton"
                        style="@style/App.ButtonBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginStart="10dp"
                        android:paddingHorizontal="@dimen/dp_55"
                        android:text="@string/landing_login_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:gravity="center_horizontal|center_vertical">

                    <View
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:fontFamily="@font/opensans"
                        android:gravity="center"
                        android:text="@string/or_login_with"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/endGuideline"
                        app:layout_constraintStart_toStartOf="@id/startGuideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:background="@drawable/bg_off_white_radius"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/imageFaceRecogniton"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_face"
                        android:padding="1dp"
                        android:visibility="gone"
                        app:tint="@color/black_50" />
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@color/grey" />
                    <ImageView
                        android:id="@+id/imageBioMetric"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:src="@drawable/biometric"
                        app:tint="@color/black_50"
                        />
                    <View
                        android:id="@+id/sepratorBioMetric"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/grey" />
                    <ImageView
                        android:id="@+id/googleButton"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_google_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_25"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/endGuideline"
                    app:layout_constraintStart_toStartOf="@id/startGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/rememberMeCheckBox">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="@string/create_new_account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/signUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/sign_up"
                        android:textColor="@color/colorPrimaryBlue"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/loading_overlay"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>