<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/common_cancel"
                android:textColor="@color/blue300"
                android:textSize="@dimen/sp_14" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_10" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="@dimen/dp_10"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/save"
                android:textColor="@color/blue300"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:id="@+id/tvAddNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/add_new_allergy_title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15" />

        <include
            android:id="@+id/search"
            layout="@layout/view_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15" />


        <TextView
            android:id="@+id/txtSearchSomething"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:fontFamily="@font/opensans"
            android:lineSpacingExtra="2dp"
            android:text="Please enter the name of the medicine you're looking for into the search bar below. This will help you quickly find the desired medication from our database"
            android:textColor="@color/gray600"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/txtLoadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:fontFamily="@font/opensans"
            android:lineSpacingExtra="2dp"
            android:text="Please wait searching first time it take few minutes.."
            android:textColor="@color/gray600"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/txtMostRelevnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans_semibold"
            android:maxLines="2"
            android:text="@string/most_relavant"
            android:visibility="gone"
            android:textColor="@color/gray600"
            android:textSize="@dimen/sp_14" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5" />

        <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
            android:id="@+id/rvAddNewList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/dp_15"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="13"
            tools:listitem="@layout/item_view_add_new_category" />

        <ProgressBar
            android:id="@+id/tvLoadingData"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/loading_list"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />



    </LinearLayout>
</layout>