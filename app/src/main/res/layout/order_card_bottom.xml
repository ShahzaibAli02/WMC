<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wmcCard"
        style="@style/App.WmcCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wmcOrderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/wmcOrderTitle"
                    style="@style/App.CardTitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_your_card_title"
                    android:textColor="@color/titleColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wmcOrderDescription"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.28"
                    android:text="@string/order_your_card_description"
                    android:textColor="@color/expandCardDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcOrderTitle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orderLaterButton"
                    style="@style/App.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/maybe_later_button"
                    app:layout_constraintBottom_toBottomOf="@id/orderNowButton"
                    app:layout_constraintEnd_toStartOf="@id/orderNowButton"
                    app:layout_constraintTop_toTopOf="@id/orderNowButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orderNowButton"
                    style="@style/App.WmcCardButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/order_now_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wmcOrderDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>