<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:strokeColor="@color/blue300"
    app:strokeWidth="1dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        >
    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete_subscription"
        android:tint="@color/red"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emergencyContactName"
        style="@style/App.FieldLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/imageClose"
        app:startIconDrawable="@drawable/ic_profile">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/App.InputField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLength="100"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emergencyContactName"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emergencyContactPhone"
            style="@style/App.FieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="@string/phone_number"
            app:startIconDrawable="@drawable/ic_call">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/App.InputField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingEnd="80dp"
                android:maxLength="100"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            app:elevation="0dp"
            app:fabSize="mini"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_call"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            app:backgroundTint="@color/light_green"
            />
    </FrameLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emergencyContactRelationship"
        style="@style/App.FieldDropDownLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColorHint="@color/registerFieldTextColor"
        app:hintTextColor="@color/registerFieldTextColor"
        app:layout_constraintTop_toBottomOf="@id/phoneLayout"
        app:startIconDrawable="@drawable/ic_peoples">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none"
            android:hint="@string/relationship"
            android:textColorHint="@color/registerFieldTextColor"
            android:labelFor="@id/relationship"
            android:textColor="@color/registerFieldTextColor"
            app:simpleItems="@array/array_relationship_2" />

    </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
</layout>