<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#F0F4FB"
        tools:context=".ui.main.healthapp.MainFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#808CF8"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_regular"
                                    android:text="Steps"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />


                                <no.wmc.ui.custom.GraphSteps
                                    android:id="@+id/imageSteps"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1" />


                                <TextView
                                    android:id="@+id/txtSteps"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autoSizeMinTextSize="10px"
                                    android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/sf_pro_display_semibold"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="--"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/txtStepsLastRead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_medium"
                                    android:text="Loading.."
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />


                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#196798"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_regular"
                                    android:text="Blood Pressure"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />


                                <ImageView
                                    android:id="@+id/imageBloodPressure"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/graph_blood_pressure" />

                                <TextView
                                    android:id="@+id/txtBloodPressure"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_semibold"
                                    android:text="N/A"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                     />

                                <TextView
                                    android:id="@+id/txtBloodPressureLastRead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_medium"
                                    android:text="Last Updated Today"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />


                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#4C5980"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_regular"
                                    android:paddingStart="20dp"
                                    android:paddingTop="20dp"
                                    android:text="Today Water"
                                    android:textColor="@color/white"

                                    android:textSize="18dp" />


                                <no.wmc.ui.custom.PieChartView
                                    android:id="@+id/imageWater"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/txtHydration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_semibold"
                                    android:paddingStart="20dp"
                                    android:text="N/A"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                    />

                                <TextView
                                    android:id="@+id/txtHydrationLastRead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_medium"
                                    android:paddingStart="20dp"
                                    android:paddingBottom="20dp"
                                    android:text="Last Updated Today"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />


                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#4BB4F6"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_regular"
                                    android:paddingStart="20dp"
                                    android:paddingTop="20dp"
                                    android:text="Pulse"
                                    android:textColor="@color/white"

                                    android:textSize="18dp" />


                                <ImageView
                                    android:id="@+id/imageHeartBeat"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/pulse_graph_png" />


                                <TextView
                                    android:id="@+id/txtHeartRate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_semibold"
                                    android:paddingStart="20dp"
                                    android:text="N/A"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/textHeartRateReadTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_display_medium"
                                    android:paddingStart="20dp"
                                    android:paddingBottom="20dp"
                                    android:text="Last Updated Today"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />


                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </LinearLayout>
</layout>